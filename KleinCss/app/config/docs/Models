#符号说明
# #:描述
# $:字段
# ->:数据demo

#一 用户
#1.用户 [users]
#唯一标识 uuid
$uuid
#昵称
$name
#邮箱
$email
#手机
$phone
#密码 md5
$password
$age
$sex
#国籍
$nationality
#生日
$birth
#是否可用(是否被管理员禁用)， 1可用 0不可用
$enable
#用户类型 0普通 1老师 2机构 3审核员 4.管理员
$usertype
-> {type:0,declare:'普通用户'}
#头像 (需要审核)
$portrait
#所在城市
$city


#2.用户扩展一 老师认证 [tcreds]
#唯一标识 uuid
$uuid
#用户唯一标识
$userid

#---基础认证信息---
#真实姓名
$name
#身份证件类型 （credentials）
$credentype
#身份证件号码
$credencode
#身份证件照片
$credenimage
#收款方式
$payway

###补充认证信息###
#学历认证 (certificate) {学位, 证件照片, 证件号码}
$acadecerti
->
{
  level:0,  //0学士以下 1学士 2硕士 3博士 ...
  image:'',
  code:''
}
#资质认证 {荣誉资质说明, 证书照片}
$servexerti
->
{
  info:''
  image:''
}
#工作历史认证
$workexp

#个人其他信息 json
->[{fname:mothertongue, fdetail:母语,:fvalue:英语，pub:是否公开}, ......]

#擅长学科
$



