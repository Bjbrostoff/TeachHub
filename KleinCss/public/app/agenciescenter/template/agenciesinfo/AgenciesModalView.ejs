
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><%= locale.AgencyInfo.Modifypassword %></h4>
        </div>
        <div class="modal-body">
            <form id="agenciesinfo-codeConfirm-form" class="form-horizontal" role="form" >
                <div class="form-group">
                    <label class="col-sm-2 control-label"><%= locale.AgencyInfo.Originalpassword %></label>
                    <div class="col-sm-10">
                        <input id="agenciesinfo-oldcode-field" type="password" class="form-control required" name="oldpassword" placeholder="<%= locale.AgencyInfo.inputoriginalpassword %>">
                    </div>

                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"><%= locale.AgencyInfo.Newpassword %></label>
                    <div class="col-sm-10">
                        <input id="agenciesinfo-newcode-field" type="password" name="newpassword" class="form-control required" placeholder="<%= locale.AgencyInfo.inputnewpassword %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"><%= locale.AgencyInfo.Confirmpassword %></label>
                    <div class="col-sm-10">
                        <input id="agenciesinfo-confirmcode-field" type="password" name="confirmpassword" class="form-control required" placeholder="<%= locale.AgencyInfo.confirmpassword %>">
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal"><%= locale.AgencyInfo.Close %></button>
            <button id="agenciesinfo-codesave-btn" type="button" class="btn btn-primary"><%= locale.AgencyInfo.Save %></button>
        </div>
    </div>
</div>
