<div class="ibox float-e-margins white-bg animated fadeInRight"
     style="position: absolute;top: 60px;right: 0px;width:600px;min-height: 1200px;border-left: #e7eaec thick solid;">
    <div class="ibox-title">
        <h5>新建课程</h5>
        <div class="col-lg-4">
            <svg height="80px" width="750px" viewBox="0 0 750 80">
                <g>
                    <line class="axis-line" x1="140" y1="35" x2="350" y2="35"
                          stroke="#ff0000">

                    </line>
                    <rect x="150" y="30" height="10" width="220" fill="orange">

                    </rect>
                </g>
                <g transform="translate(80,0)">

                    <path d="M 0 15 L 20 35 L 0 55 L 120 55 L 140 35 L 120 15 Z" fill="#1ab394">

                    </path>
                    <text x="40" y="40" fill="yellow">
                        教师选择
                    </text>

                    <path d="M 180 15 L 200 35 L 180 55 L 300 55 L 320 35 L 300 15 Z" fill="#1ab394">

                    </path>
                    <text x="215" y="40" fill="white">
                        课程信息录入
                    </text>
                </g>
            </svg>
        </div>
        <div class="ibox-tools">
            <a class="close-link course-manage-generate-close">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>

    <div class="ibox-content" id="tab-course-choose-teacher">
        <div id="teacher-item-list">
        </div>
    </div>

    <div class="ibox-content" id="tab-course-info" style="display: none">
        <form id="course-manage-generate-form"  class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-3 control-label">课程名称</label>
                <div class="col-sm-9">
                    <input class="form-control course-manage-generate-course" type="text" name="name" required>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">课程简介</label>
                <div class="col-sm-9">
                    <textarea class="form-control course-manage-generate-course" type="text" name="introduction"></textarea>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">详情</label>
                <div class="col-sm-9">
                    <textarea class="form-control course-manage-generate-course" type="text" name="info"></textarea>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">大纲</label>
                <div class="col-sm-9">
                    <textarea class="form-control course-manage-generate-course" type="text" name="catalog"></textarea>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">计费方式</label>
                <div class="col-sm-9">
                    <select class="form-control course-manage-generate-course" name="billing">
                        <option value="0">按每节课收费</option>
                        <option value="1">按每小时收费</option>
                        <option value="2">按课程收费</option>
                    </select>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">单价(RMB)</label>
                <div class="col-sm-9">
                    <input class="form-control course-manage-generate-course" name="price">
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">授课方式</label>
                <div class="col-sm-9">
                    <select class="form-control course-manage-generate-course" name="method">
                        <option value="0">教室授课</option>
                        <option value="1">上门授课</option>
                        <option value="2">网上远程授课</option>
                    </select>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">授课模式</label>
                <div class="col-sm-9">
                    <select class="form-control course-manage-generate-course" name="mode">
                        <option value="0">一对一授课</option>
                        <option value="1">一对多授课</option>
                    </select>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">面向年龄群体</label>
                <div class="col-sm-5">
                    <input class="course-manage-generate-course" name="range-min" value="8">
                </div>
                至
                <div class="col-sm-5">
                    <input class="course-manage-generate-course" name="range-max" value="20">
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">课程缩略图</label>
                <div class="col-sm-9">

                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">课程图片</label>
                <div class="col-sm-9">

                </div>
            </div>
            <div class="hr-line-dashed"></div>


        </form>

        <div class="row">
            <div class="col-sm-4">

            </div>
            <div class="col-sm-3">
                <div class="btn btn-primary course-manage-generate-save">新建</div>
            </div>
            <div class="col-sm-3">
                <div class="btn btn-default course-manage-generate-cancel">取消</div>
            </div>
            <div class="col-sm-3">

            </div>
        </div>
    </div>
</div>
