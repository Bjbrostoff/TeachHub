<div class="ibox  white-bg animated fadeInRight"
     style="position: absolute;top: 60px;right: 0px;width:400px;min-height: 1200px;border-left: #e7eaec thick solid;">
    <div class="ibox-title">
        <h5><%= locale.MyFavorites.CourseDetail %></h5>
        <div class="ibox-tools">
            <a class="close-link btn-close">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>

    <div class="ibox-content">
        <form id="course-manage-generate-form" class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-3 control-label"><%= locale.MyFavorites.Name %></label>
                <div class="col-sm-9">
                    <input class="form-control course-manage-generate-course" type="text" name="name" value="<%=course['name']%>" required>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label"><%= locale.MyFavorites.Intro %></label>
                <div class="col-sm-9">
                    <textarea class="form-control course-manage-generate-course" type="text" name="introduction"><%=course['introduction']%></textarea>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label"><%= locale.MyFavorites.info %></label>
                <div class="col-sm-9">
                    <textarea class="form-control course-manage-generate-course" type="text" name="info"><%=course['info']%></textarea>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label"><%= locale.MyFavorites.Catalog %></label>
                <div class="col-sm-9">
                    <textarea class="form-control course-manage-generate-course" type="text" name="catalog"><%=course['catalog']%></textarea>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label"><%= locale.MyFavorites.Billing %></label>
                <div class="col-sm-9">
                    <select class="form-control course-manage-generate-course" name="billing">
                        <option selected="<% course['billing']['fvalue'] == 0?'select':'unselected'%>" value="0"><%= locale.MyFavorites.Accordingtothestandardfee %></option>
                        <option selected="<% course['billing']['fvalue'] == 1?'select':'unselected'%>" value="1"><%= locale.MyFavorites.Hourlyfee %></option>
                    </select>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label"><%= locale.MyFavorites.Price %></label>
                <div class="col-sm-9">
                    <input class="form-control course-manage-generate-course" name="price" value="<%=course['price']%>">
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label"><%= locale.MyFavorites.TeachMethod %></label>
                <div class="col-sm-9">
                    <select class="form-control course-manage-generate-course" >
                        <option selected="<% course['method']['type'] == 0?'select':'unselected'%>"><%= locale.MyFavorites.Classroomteaching %></option>
                        <option selected="<% course['method']['type'] == 1?'select':'unselected'%>"><%= locale.MyFavorites.Drivinghome %></option>
                        <option selected="<% course['method']['type'] == 2?'select':'unselected'%>"><%= locale.MyFavorites.Onlinedistancelearning %></option>
                    </select>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label"><%= locale.MyFavorites.TeachMode %></label>
                <div class="col-sm-9">
                    <select class="form-control course-manage-generate-course">
                        <option selected="<% course['mode']['type'] == 0?'select':'unselected'%>"><%= locale.MyFavorites.OnetoOne %></option>
                        <option selected="<% course['mode']['type'] == 1?'select':'unselected'%>"><%= locale.MyFavorites.OnetoMore %></option>
                    </select>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label"><%= locale.MyFavorites.Range %></label>
                <input class="col-sm-2 course-manage-generate-course" name="range-min" value="<%=course['range']['min']%>">
                <label class="col-sm-1 control-label"><%= locale.MyFavorites.to %></label>
                 <input class="col-sm-2 course-manage-generate-course" name="range-max" value="<%=course['range']['max']%>">
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label"><%= locale.MyFavorites.Thumb %></label>
                <div class="col-sm-9">

                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label"><%= locale.MyFavorites.MyFavorites %></label>
                <div class="col-sm-9">

                </div>
            </div>
            <div class="hr-line-dashed"></div>


        </form>
    </div>
</div>
