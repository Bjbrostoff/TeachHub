<% var count = data.length %>
<div class="sameday-box" style="display:block;"><!--当日详情-->
    <div class="col-sm-10">
        <form id="sth-arrangehomework-allinfo" method="get" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label"><%= locale.StudentHomework.SelectCourse %></label>
                <div class="col-sm-10">
                    <select id="sth-releasehomework-coursename" class="form-control m-b" name="account">
                        <% for(var i = 0;i < count;i++){ %>
                        <option value="<%= data[i]._id %>"><%= data[i].name %></option>
                        <% } %>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label"><%= locale.StudentHomework.HomeworkTitle %></label>
                <div class="col-sm-10">
                    <input id="sth-releasehomework-title" type="text" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label"><%= locale.StudentHomework.Content %></label>
                <div class="col-sm-10">
                    <div class="mail-text h-200">
                        <div class="ibox-content no-padding ">
                            <div id="summernotereleasehomework" class="summernote" STYLE="HEIGHT:400PX;">
                                <%= data.text["content"] %>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="sth-homework-release" class=" text-right tooltip-demo">
                    <a class="btn btn-sm btn-primary" data-placement="top">
                        <i class="fa fa-reply"></i>
                        <%= locale.StudentHomework.Release %>
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-2"></div>
</div>